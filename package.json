{
  "name": "pinia-xstate",
  "type": "module",
  "version": "2.0.0",
  "description": "Put your xstate state machines into a global pinia store.",
  "license": "MIT",
  "keywords": [
    "pinia",
    "xstate",
    "state machines"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "unpkg": "dist/index.global.js",
  "jsdelivr": "dist/index.global.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "release": "bumpp --commit --push --tag && npm publish",
    "prepublishOnly": "nr build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "peerDependencies": {
    "pinia": "^2.0.0",
    "xstate": "^5.0.0"
  },
  "dependencies": {
    "vue": "^3.3.9"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.1.2",
    "@antfu/ni": "^0.21.12",
    "bumpp": "^9.2.0",
    "eslint": "^8.54.0",
    "eslint-plugin-import": "^2.29.0",
    "pinia": "^2.1.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6",
    "xstate": "^5.0.0"
  }
}
